generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organisation {
  id                  String     @id @default(uuid()) @db.Uuid
  name                String
  slug                String     @unique
  access_code_hash    String
  admin_password_hash String
  created_at          DateTime   @default(now()) @db.Timestamptz(6)
  updated_at          DateTime   @updatedAt @db.Timestamptz(6)
  assets              Asset[]
  documents           Document[]
  sessions            Session[]
}

model Asset {
  id     String       @id @default(uuid()) @db.Uuid
  org_id String       @db.Uuid
  org    Organisation @relation(fields: [org_id], references: [id], onDelete: Cascade)

  public_token String  @unique
  name         String
  location     String?
  notes        String?
  is_public    Boolean @default(false)

  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @updatedAt @db.Timestamptz(6)

  documents Document[]

  @@index([org_id])
}

model Document {
  id       String @id @default(uuid()) @db.Uuid
  org_id   String @db.Uuid
  asset_id String @db.Uuid

  org   Organisation @relation(fields: [org_id], references: [id], onDelete: Cascade)
  asset Asset        @relation(fields: [asset_id], references: [id], onDelete: Cascade)

  title            String
  doc_type         String?
  storage_provider String    @default("s3")
  storage_key      String
  filename         String
  content_type     String
  size_bytes       BigInt?
  checksum_sha256  String?
  uploaded_at      DateTime? @db.Timestamptz(6)
  updated_at       DateTime  @updatedAt @db.Timestamptz(6)
  upload_status    String    @default("uploading")
  notes            String?

  @@index([asset_id])
  @@index([org_id])
}

model Session {
  id     String       @id @default(uuid()) @db.Uuid
  org_id String       @db.Uuid
  org    Organisation @relation(fields: [org_id], references: [id], onDelete: Cascade)

  session_token_hash String   @unique
  session_type       String
  expires_at         DateTime @db.Timestamptz(6)
  created_at         DateTime @default(now()) @db.Timestamptz(6)
  last_seen_at       DateTime @default(now()) @db.Timestamptz(6)

  @@index([org_id])
}
